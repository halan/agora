#block-login.block
  %h2 Sign up
  .content.login

    .flash
      -flash.each do |type, message|
        .message{:class => type}
          %p= message

    = form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form login'} do |f|
      .group.wat-cf
        .left
          = f.label :email, :class => 'label right'
        .right
          = f.email_field :email, :class => 'text_field'
      .group.wat-cf
        .left
          = f.label :password, :class => 'label right'
        .right
          = f.password_field :password, :class => 'text_field'
      .group.wat-cf
        .left
          = f.label :password_confirmation, :class => 'label right'
        .right
          = f.password_field :password_confirmation, :class => 'text_field'
      .group.wat-cf.navform
        .right
          %button.button{:type => 'submit'}
            %img{:src => "/stylesheets/themes/activo/images/icons/tick.png", :alt=>"Save"}
            Signup
      .group.wat-cf
        = render :partial => 'devise/shared/links'

