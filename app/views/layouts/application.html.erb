<!DOCTYPE html>
<html>
<head>
  <title>Ágora</title>
  <%= stylesheet_link_tag "jquery-ui.css", "base", "formtastic", "jquery.tipsy", "uniform.default.css", "themes/activo/style",  :cache => true %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">Ágora</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
          <li><a href="#"><img src="stylesheets/themes/activo/images/session/home.png" title="<%= t("web-app-theme.dashboard", :default => "Dashboard") %>"/></a></li>
          <li><a href="#"><img src="stylesheets/themes/activo/images/session/account.png" title="<%= t("web-app-theme.profile", :default => "Profile") %>" /></a></li>
          <li><a href="#"><img src="stylesheets/themes/activo/images/session/config.png" title="<%= t("web-app-theme.preferences", :default => "preferences") %>" /></a></li>
          <li><a href="#"><img src="stylesheets/themes/activo/images/session/logout.png" title="<%= t("web-app-theme.logout", :default => "Logout") %>" /></a></li>

        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf"></ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Copyleft &copy; <%= Time.now.year %> Ágora.</p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>
